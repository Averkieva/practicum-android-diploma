<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_black">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layout_constraintGuide_begin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/layout_constraintGuide_begin" />

    <LinearLayout
        android:id="@+id/ll_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/fragment_filter_padding_vartical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_filter_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_filter_padding"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/tv_filter_main_text"
            style="@style/YsDisplayMedium.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_filter_margin_start"
            android:text="@string/setting_of_filter"
            android:textColor="@color/black_white" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/place_of_work"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_filter_margin_top"
        android:colorControlActivated="@color/black"
        android:enabled="false"
        android:textColorHint="@color/grey"
        app:boxStrokeWidth="@dimen/fragment_filter_broke_stroke_width"
        app:boxStrokeWidthFocused="@dimen/fragment_filter_broke_stroke_width"
        app:endIconDrawable="@drawable/arrow_forward"
        app:endIconMode="custom"
        app:endIconTint="@color/black_white"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_main_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_place_of_work"
            style="@style/YsDisplayRegular.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/place_of_work"
            android:text="@string/placeholder_place_of_work"
            android:textColor="@color/black_white"
            android:textColorHint="@color/grey"
            app:endIconDrawable="@drawable/arrow_forward" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/industry"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="wrap_content"
        android:colorControlActivated="@color/black"
        android:enabled="false"
        android:textColorHint="@color/grey"
        app:boxStrokeWidth="@dimen/fragment_filter_broke_stroke_width"
        app:boxStrokeWidthFocused="@dimen/fragment_filter_broke_stroke_width"
        app:endIconDrawable="@drawable/arrow_forward"
        app:endIconMode="custom"
        app:endIconTint="@color/black_white"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_of_work">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_industry"
            style="@style/YsDisplayRegular.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/industry"
            android:text="@string/placeholder_industry"
            android:textColor="@color/black_white"
            android:textColorHighlight="@color/grey"
            android:textColorHint="@color/grey" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_edit_text_background"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="@dimen/fragment_filter_height"
        android:layout_marginTop="@dimen/fragment_filter_margin_top_24dp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/industry" />

    <EditText
        android:id="@+id/et_salary"
        style="@style/YsDisplayRegular.Medium"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_filter_margin_top_24dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="@string/write_sum"
        android:inputType="number"
        android:maxLines="1"
        android:paddingStart="@dimen/fragment_filter_margin_start"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_white"
        android:textCursorDrawable="@drawable/color_cursor"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/iv_edit_text_background" />

    <TextView
        android:id="@+id/tv_expected_salary"
        style="@style/YsDisplayRegular.Small"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_filter_margin_start"
        android:layout_marginTop="@dimen/fragment_filter_margin_top_32dp"
        android:colorControlActivated="@color/blue"
        app:boxBackgroundColor="@color/blue"
        android:text="@string/expected_salary"
        android:textColor="@color/grey_white"
        app:layout_constraintBottom_toTopOf="@+id/et_salary"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <ImageView
        android:id="@+id/iv_clear_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_filter_margin_end"
        android:src="@drawable/close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_text_background"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/iv_edit_text_background" />

    <TextView
        android:id="@+id/tv_without_salary"
        style="@style/YsDisplayRegular.Medium"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_filter_margin_top_44dp"
        android:text="@string/stop_show_without_salary"
        android:textColor="@color/black_white"
        app:layout_constraintEnd_toStartOf="@+id/cb_filter"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/et_salary" />

    <CheckBox
        android:id="@+id/cb_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_without_salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/tv_without_salary" />


    <TextView
        android:id="@+id/tv_apply"
        style="@style/YsDisplayRegular.Medium"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="@dimen/fragment_filter_height_60dp"
        android:layout_marginBottom="@dimen/fragment_filter_layout_margin_bottom"
        android:background="@drawable/button_background_on"
        android:gravity="center"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_remove"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <TextView
        android:id="@+id/tv_remove"
        style="@style/YsDisplayRegular.Medium"
        android:layout_width="@dimen/fragment_filter_layout_width"
        android:layout_height="@dimen/fragment_filter_height_60dp"
        android:layout_marginBottom="@dimen/fragment_filter_layout_margin_bottom_24dp"
        android:gravity="center"
        android:text="@string/reset"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>
