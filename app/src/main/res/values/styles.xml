<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Text font styles-->
    <style name="YsDisplayBold">
        <item name="android:layout_height">38dp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/very_large_text_size</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="YsDisplayMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="YsDisplayMedium.Large">
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="YsDisplayMedium.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="YsDisplayRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="YsDisplayRegular.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="YsDisplayRegular.Small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
<!--    Button styles-->
    <style name="ButtonStyle" parent="YsDisplayMedium.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="ButtonStyle.On">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_on</item>
    </style>
    <style name="ButtonStyle.Off">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/button_background_off</item>
    </style>
<!--    Card vacancy text styles-->
    <style name="CardTextViewStyleTop" parent="YsDisplayMedium.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CardTextViewStyleBottom" parent="YsDisplayRegular.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
