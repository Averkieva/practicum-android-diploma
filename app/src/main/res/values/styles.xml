<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YsDisplayBold">
        <item name="android:layout_height">38dp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/very_large_text_size</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="YsDisplayMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="YsDisplayMedium.Large">
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="YsDisplayMedium.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="YsDisplayRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="YsDisplayRegular.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="YsDisplayRegular.Small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>
